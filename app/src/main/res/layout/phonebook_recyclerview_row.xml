<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/employee_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_organ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_from_parents"
                android:layout_marginRight="@dimen/between_icon_margin"
                android:text="학과이름"
                android:textColor="@color/light"
                android:textSize="@dimen/position_font_size" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/light" />

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/between_icon_margin"
                android:text="직위"
                android:textColor="@color/light"
                android:textSize="@dimen/position_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_from_parents"
                android:layout_marginRight="@dimen/between_icon_margin"
                android:text="홍길동"
                android:textColor="@color/bold"
                android:textSize="@dimen/name_font_size" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bold" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/between_icon_margin"
                android:text="000-1234-5678"
                android:textColor="@color/bold"
                android:textSize="@dimen/name_font_size" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_call_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_call_custom"
        app:borderWidth="0dp"
        app:fabCustomSize="@dimen/fab_size"
        app:maxImageSize="@dimen/fab_text_size_three" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/employee_row"
        android:background="@color/line" />

</RelativeLayout>


