<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/employee_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_organ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_from_parents"
                android:layout_marginRight="@dimen/between_icon_margin"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="학과이름"
                android:textColor="@color/light"
                android:textSize="@dimen/position_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="l"
                android:textColor="@color/light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/between_icon_margin"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="직위"
                android:textColor="@color/light"
                android:textSize="@dimen/position_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_from_parents"
                android:layout_marginRight="@dimen/between_icon_margin"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="홍길동"
                android:textColor="@color/bold"
                android:textSize="@dimen/name_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="l"
                android:textColor="@color/bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/between_icon_margin"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="000-1234-5678"
                android:textColor="@color/bold"
                android:textSize="@dimen/name_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_from_parents"
                android:fontFamily="@font/nanum_square_round_eb"
                android:textColor="@color/light"
                android:textSize="@dimen/position_font_size"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/employee_row"
        android:background="@color/line" />

</RelativeLayout>


